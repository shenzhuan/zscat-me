<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mallplus.user.mapper.SysRoleMapper">
	<resultMap id="BaseResultMap" type="com.mallplus.common.model.SysRole">
		<id column="id" property="id" />
		<result column="name" property="name" />
		<result column="code" property="code" />

		<result column="create_time" property="createTime" />

	</resultMap>

	<!-- 通用查询结果列 -->
	<sql id="Base_Column_List">
		id, name, code, create_time
	</sql>
	<select id="findRolesByUserId" resultMap="BaseResultMap">
		select r.*
		from sys_role_user ar left join sys_role r on ar.role_id = r.id
		where ar.user_id = #{id}
	</select>

</mapper>